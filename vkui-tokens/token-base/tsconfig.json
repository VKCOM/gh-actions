{
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", ".eslintrc.cjs"],
  "exclude": ["node_modules"]
}
