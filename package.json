{
  "name": "@vkontakte/gh-actions",
  "private": true,
  "workspaces": {
    "packages": [
      "VKUI/*",
      "icons/*",
      "vkui-tokens/*",
      "shared/rust/cargo-update-toml",
      "shared/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach -p -A run build",
    "test": "NODE_OPTIONS='--no-experimental-strip-types' yarn workspaces foreach -p -A run test",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:es": "eslint . --ext .jsx,.js,.ts,.tsx --cache --cache-location .cache/.eslintcache",
    "lint:types": "tsc --incremental --tsBuildInfoFile .cache/.tsbuildinfo",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vkontakte/eslint-plugin": "^2.0.0",
    "@vkontakte/prettier-config": "^0.2.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "yarn-deduplicate": "^6.0.2"
  },
  "prettier": "@vkontakte/prettier-config",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ]
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0"
  },
  "packageManager": "yarn@4.10.2+sha512.0b0e54ad5381f0a35184957bd3ea44e37f5a4fb1960b903b0fb9a3c7c2c009190455c41ef2a1977b1dbd3b72c5f152da696e9c52e2bc78a011b6adea8ee73ba3"
}
