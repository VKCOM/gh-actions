{
  "name": "@vkontakte/gh-actions",
  "private": true,
  "workspaces": {
    "packages": [
      "VKUI/*",
      "icons/*",
      "vkui-tokens/*",
      "shared/rust/cargo-update-toml",
      "shared/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach -p -A run build",
    "test": "NODE_OPTIONS='--no-experimental-strip-types' yarn workspaces foreach -p -A run test",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:es": "yarn workspaces foreach -p -A run lint:es",
    "lint:types": "tsc --incremental --tsBuildInfoFile .cache/.tsbuildinfo",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vkontakte/prettier-config": "^0.2.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.11",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "yarn-deduplicate": "^6.0.2"
  },
  "prettier": "@vkontakte/prettier-config",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ]
  },
  "packageManager": "yarn@4.10.3+sha512.c38cafb5c7bb273f3926d04e55e1d8c9dfa7d9c3ea1f36a4868fa028b9e5f72298f0b7f401ad5eb921749eb012eb1c3bb74bf7503df3ee43fd600d14a018266f"
}
