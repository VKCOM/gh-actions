{
  "name": "@vkontakte/gh-actions",
  "private": true,
  "workspaces": {
    "packages": [
      "VKUI/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:es": "eslint . --ext .jsx,.js,.ts,.tsx --cache --cache-location .cache/.eslintcache",
    "lint:types": "tsc --incremental --tsBuildInfoFile .cache/.tsbuildinfo",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "deduplicate": "yarn-deduplicate --list && yarn-deduplicate --fail"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vkontakte/eslint-plugin": "^1.1.0",
    "@vkontakte/prettier-config": "^0.1.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "typescript": "^5.0.4",
    "yarn-deduplicate": "^6.0.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ]
  },
  "engines": {
    "yarn": "^1.21.1"
  },
  "packageManager": "yarn@1.22.19"
}
